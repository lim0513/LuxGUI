<Window x:Class="Lux_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lux_GUI"
        mc:Ignorable="d" Loaded="Window_Loaded"        
        Title="lux_GUI" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="下载地址：" />
            <TextBox Grid.Column="1" Text="{Binding DownloadUrl}" VerticalContentAlignment="Center" IsEnabled="{Binding CanParser}" />
            <Button Grid.Column="2" Content="解析" Click="BtnParser_Click" IsEnabled="{Binding CanParser}"  />
        </Grid>
        <Grid Grid.Row="1" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="网站：" />
            <Label Grid.Column="1" Content="{Binding DlSite}" />
            <Label Grid.Column="2" Content="标题：" />
            <Label Grid.Column="3" Content="{Binding DlTitle}" />
            <Label Grid.Column="4" Content="类型：" />
            <Label Grid.Column="5" Content="{Binding DlType}" />

        </Grid>
        <DataGrid Grid.Row="2" ItemsSource="{Binding Streams,Mode=OneWay}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Resources>
                <Style x:Key="vCenter" TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="流名称" Binding="{Binding Name}" Width="100" ElementStyle="{StaticResource vCenter}" />
                <DataGridTextColumn Header="质量" Binding="{Binding Quality}" Width="*" ElementStyle="{StaticResource vCenter}" />
                <DataGridTextColumn Header="大小" Binding="{Binding Size}" Width="200" ElementStyle="{StaticResource vCenter}" />
                <DataGridTemplateColumn Header="操作" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="下载" Height="20" Margin="3,1" Click="BtnAction_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="3" VerticalAlignment="Center">
            <Label Content="{Binding LuxInfo}"/>
        </Grid>
    </Grid>
</Window>
